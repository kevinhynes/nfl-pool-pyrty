#: import random random


<ScoreButton@Button>:
    canvas:
        Color:
            rgba: (random.random(), random.random(), random.random(), 0.5)
        Rectangle:
            size: self.size
            pos: self.pos

<ColorLabel@Label>:
    canvas:
        Color:
            rgba: (random.random(), random.random(), random.random(), 0.5)
        Rectangle:
            size: self.size
            pos: self.pos

<PoolGrid>:
    canvas:
        Color:
            rgba: (random.random(), random.random(), random.random(), 0.5)
        Rectangle:
            size: self.size
            pos: self.pos

<PoolNumberRC>:
    canvas:
        Color:
            rgba: (random.random(), random.random(), random.random(), 0.5)
        Rectangle:
            size: self.size
            pos: self.pos

<NFLWidget>:
    cols: 2
    rows: 2
    spacing: 10
    padding: 10
    canvas.before:
        Color:
            rgba: (1, 1, 1, 0.2)
        Rectangle:
            size: self.size
            pos: self.pos
    
    
    Button:
        id: shuffle_btn
        text: 'Welcome to the Pyrty!'
        size_hint: (0.2, 0.2)
        on_press: poolnumrow.shuffle_pool_nums(), poolnumcol.shuffle_pool_nums(), print("LOL BLASTED IT")

    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.8, 0.2)
        spacing: 5
        StackLayout:
            orientation: 'lr-tb'
            Image:
                size_hint_x: 0.2
                size: self.size
                pos: self.pos
                source: './images/pats_logo.png'   
                allow_stretch: True
                keep_ratio: True
            ColorLabel:
                text: root.team1
                size_hint_x: 0.6
            
            ScoreButton:
                text: str(root.team1_score)
                size_hint_x: 0.2
                on_press: root.change_score(root.team1)
                    
        PoolNumberRC:
            id: poolnumrow
            rows: 1
            cols: 10
            size_hint_y: 0.3

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (0.2, 0.8)
        spacing: 5
        StackLayout:
            orientation: 'tb-lr'
            Image:
                size_hint_y: 0.2
                size: self.size
                pos: self.pos
                source: './images/rams_logo.png'   
                allow_stretch: True
                keep_ratio: True
            ColorLabel:
                text: root.team2
                size_hint_y: 0.6
            
            ScoreButton:
                text: str(root.team2_score)
                size_hint_y: 0.2
                on_press: root.change_score(root.team2)
        
        PoolNumberRC:
            id: poolnumcol
            rows: 10
            cols: 1
            size_hint_x: 0.3
    
    PoolGrid:
        id: poolgrid
        size_hint: (0.8, 0.8)
